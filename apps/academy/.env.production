# EDEN3 Academy Production Environment
# Vercel deployment configuration

# Node Environment
NODE_ENV="production"

# API Configuration
NEXT_PUBLIC_API_URL="https://api-eden3.railway.app"

# NextAuth Configuration
NEXTAUTH_SECRET="your-production-nextauth-secret-32-chars-min"
NEXTAUTH_URL="https://academy-eden3.vercel.app"

# Authentication & Security
JWT_SECRET="your-production-jwt-secret-64-chars-recommended"

# External Service APIs
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
REPLICATE_API_TOKEN="your-replicate-token"

# Eden Legacy Integration
EDEN_LEGACY_API_URL="https://api.eden.art"
EDEN_LEGACY_API_KEY="your-eden-legacy-key"

# Monitoring & Logging
SENTRY_DSN="your-production-sentry-dsn"

# Production Feature Flags
FEATURE_MEMORY_ENABLED=true
FEATURE_KNOWLEDGE_ENABLED=true
FEATURE_PERSONALITY_ENABLED=true
FEATURE_CONTRACTS_ENABLED=true

# Production Settings
DEBUG=false
MOCK_EXTERNAL_APIS=false