# PostgreSQL Environment Configuration
# Copy this file to .env after running the migration

# Database Configuration - PostgreSQL
DATABASE_URL="postgresql://eden3:eden3_dev_password@localhost:5432/eden3"

# Original SQLite URL (backup - keep for rollback)
# DATABASE_URL="file:./prisma/dev.db"

# API Configuration
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Redis Configuration (if using)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External API Keys (if applicable)
# Add your external API keys here

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Database Connection Pool (PostgreSQL specific)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Migration Specific
MIGRATION_SOURCE=sqlite
MIGRATION_TARGET=postgresql
BACKUP_ENABLED=true