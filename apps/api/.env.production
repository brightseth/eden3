# EDEN3 API Production Environment
# Railway deployment configuration

# Node Environment
NODE_ENV="production"

# Server Configuration
PORT=3001
API_HOST="0.0.0.0"

# Database Configuration (Railway PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database_name"
REDIS_URL="redis://username:password@host:port"
REDIS_HOST="host"
REDIS_PORT="port"
REDIS_PASSWORD="password"

# Authentication & Security
JWT_SECRET="your-production-jwt-secret-64-chars-recommended"
ENCRYPTION_KEY="your-production-encryption-key-32-chars"

# CORS Configuration
ALLOWED_ORIGINS="https://academy-eden3.vercel.app,https://eden3.ai,https://www.eden3.ai"

# External Service APIs
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
REPLICATE_API_TOKEN="your-replicate-token"

# Eden Legacy Integration
EDEN_LEGACY_API_URL="https://api.eden.art"
EDEN_LEGACY_API_KEY="your-eden-legacy-key"

# Blockchain Configuration
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-infura-key"
PRIVATE_KEY="your-private-key"
CONTRACT_ADDRESS="your-contract-address"

# Monitoring & Logging
SENTRY_DSN="your-production-sentry-dsn"
LOG_LEVEL="info"

# Production Feature Flags
FEATURE_MEMORY_ENABLED=true
FEATURE_KNOWLEDGE_ENABLED=true
FEATURE_PERSONALITY_ENABLED=true
FEATURE_CONTRACTS_ENABLED=true

# Production Settings
DEBUG=false
MOCK_EXTERNAL_APIS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RATE_LIMIT=1000

# SSL/TLS
FORCE_HTTPS=true