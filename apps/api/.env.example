# Database
DATABASE_URL="postgresql://username:password@localhost:5432/eden3_db?schema=public"

# Application
NODE_ENV="development"
PORT=3001

# JWT & Authentication
JWT_SECRET="your-secret-key-replace-in-production"
API_KEY="your-api-key-for-authenticated-endpoints"

# Webhook Security
WEBHOOK_SECRET="your-webhook-hmac-secret-256-bits"

# Redis Configuration (for BullMQ)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_URL="redis://localhost:6379"

# External API Keys
OPENAI_API_KEY="your-openai-key"
REPLICATE_API_TOKEN="your-replicate-token"

# CORS Configuration (production)
ALLOWED_ORIGINS="https://eden.art,https://academy.eden.art"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Health Checks
HEALTH_CHECK_ENABLED=true
DETAILED_HEALTH_CHECKS=true

# Feature Flags
ENABLE_WEBHOOK_VERIFICATION=true
ENABLE_EVENT_PROCESSING=true
ENABLE_DETAILED_LOGGING=true

# Performance
DATABASE_CONNECTION_LIMIT=20
QUERY_TIMEOUT_MS=30000