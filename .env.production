# EDEN3 Production Environment Configuration
# This file contains placeholder values for production deployment
# Replace with actual values when deploying

# Node Environment
NODE_ENV="production"

# Database Configuration (Railway PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database_name"
REDIS_URL="redis://username:password@host:port"

# API Configuration
API_PORT=3001
API_HOST="0.0.0.0"

# Academy Configuration
NEXT_PUBLIC_API_URL="https://api-eden3.railway.app"
NEXTAUTH_SECRET="your-production-nextauth-secret-32-chars-min"
NEXTAUTH_URL="https://academy-eden3.vercel.app"

# Authentication & Security
JWT_SECRET="your-production-jwt-secret-64-chars-recommended"
ENCRYPTION_KEY="your-production-encryption-key-32-chars"

# CORS Configuration
ALLOWED_ORIGINS="https://academy-eden3.vercel.app,https://eden3.ai,https://www.eden3.ai"

# External Service APIs
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
REPLICATE_API_TOKEN="your-replicate-token"

# Eden Legacy Integration
EDEN_LEGACY_API_URL="https://api.eden.art"
EDEN_LEGACY_API_KEY="your-eden-legacy-key"

# Blockchain Configuration
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/your-infura-key"
PRIVATE_KEY="your-private-key"
CONTRACT_ADDRESS="your-contract-address"

# Monitoring & Logging
SENTRY_DSN="your-production-sentry-dsn"
LOG_LEVEL="info"

# Production Feature Flags
FEATURE_MEMORY_ENABLED=true
FEATURE_KNOWLEDGE_ENABLED=true
FEATURE_PERSONALITY_ENABLED=true
FEATURE_CONTRACTS_ENABLED=true

# Production Settings
DEBUG=false
MOCK_EXTERNAL_APIS=false

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_RATE_LIMIT=1000

# Cache Configuration
REDIS_HOST="host"
REDIS_PORT="port"
REDIS_PASSWORD="password"
REDIS_DB=0

# SSL/TLS Configuration
SSL_CERT_PATH=""
SSL_KEY_PATH=""
FORCE_HTTPS=true