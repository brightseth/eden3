{
  "name": "eden3",
  "version": "0.1.0",
  "description": "EDEN3 - Next Generation AI Agents Platform",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo build",
    "build:production": "./scripts/production-build.sh",
    "dev": "turbo dev",
    "start": "turbo start",
    "start:prod": "turbo start:prod",
    "test": "turbo test",
    "test:production": "NODE_ENV=production turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "deploy:check": "npm run lint && npm run type-check && npm run build",
    "health:api": "curl -f http://localhost:3001/health || echo 'API health check failed'",
    "health:academy": "curl -f http://localhost:3000/api/health || echo 'Academy health check failed'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.6",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
